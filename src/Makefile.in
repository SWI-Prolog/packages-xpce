dv-boot:	dv-lib
		@for d in $(DVBOOTDIRS); do \
		    if [ ! -d $(DESTDIR)$(DVHOME)/prolog/$$d ]; then \
		        mkdir $(DESTDIR)$(DVHOME)/prolog/$$d; \
		    fi; \
		    for f in ../prolog/$$d/*.pl; do \
			echo $$f; \
			$(INSTALL_DATA) $$f $(DESTDIR)$(DVHOME)/prolog/$$d; \
		    done; \
		done

