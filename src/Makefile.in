		if [ -r $(MANINDEX) ]; then \
		    $(INSTALL_DATA) $(MANINDEX) $(DESTDIR)$(DVHOME)/man/reference; \
		fi

dv-man:		dv-manual
		for f in xpce-client; do \
		    if test -w $(DESTDIR)/$(smandir); then \
