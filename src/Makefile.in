		$(INSTALL_DATA) -p1 ../man/reference/*.doc $(DESTDIR)$(DVHOME)
		$(INSTALL_DATA) -p1 ../man/reference/class/*.doc $(DESTDIR)$(DVHOME)
		$(INSTALL_DATA) -p1 ../man/faq/*.html $(DESTDIR)$(DVHOME)

